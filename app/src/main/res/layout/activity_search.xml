<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search">

    <ImageView
        android:id="@+id/background_pic"
        android:layout_width="373dp"
        android:layout_height="683dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.627"
        app:srcCompat="@drawable/back3" />


    <EditText
        android:id="@+id/search"
        android:layout_width="227dp"
        android:layout_height="41dp"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="164dp"
        android:hint="search here"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="#CEC5C0"
        android:iconifiedByDefault="false"
        android:orientation="horizontal"

        android:queryHint="search here"

        android:theme="@style/Widget.AppCompat.SearchView.ActionBar"
        app:layout_constraintEnd_toStartOf="@+id/search_button2"
        app:layout_constraintHorizontal_bias="0.703"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/background_pic" />

    <ImageButton
        android:id="@+id/search_button2"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="73dp"
        android:layout_height="41dp"
        android:layout_marginTop="165dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:background="#333030"
        android:fadingEdge="horizontal|none"
        android:src="@android:drawable/ic_menu_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/background_pic" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="247dp"
        android:layout_height="373dp"
        android:layout_marginStart="63dp"
        android:layout_marginLeft="63dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:layout_marginBottom="50dp"
        android:background="#CEC5C0"
        android:padding="40sp"
        android:text="Recommended books"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/background_pic"
        app:layout_constraintEnd_toEndOf="@+id/background_pic"
        app:layout_constraintStart_toStartOf="@+id/background_pic" />
</androidx.constraintlayout.widget.ConstraintLayout>